<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".fragments.Guruhlar.StudentFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:padding="@dimen/_10sdp"
        android:background="#FFB800">
        <ImageView
            android:id="@+id/chiqish"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/left"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guruh malumotlari"
            android:textColor="#3F51B5"
            android:layout_toEndOf="@id/chiqish"
            android:layout_centerVertical="true"
            android:textSize="@dimen/_20ssp"
            android:layout_marginStart="@dimen/_10sdp"/>
        <ImageView
            android:id="@+id/add"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/add"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/name_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="android 1"
            android:textSize="@dimen/_20ssp"
            android:textColor="#3F51B5"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="49dp"
                android:text="O'quvchilar soni: "
                android:textColor="#3F51B5"
                android:textSize="@dimen/_20ssp" />
            <TextView
                android:id="@+id/count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="@dimen/_20ssp"
                android:textColor="#3F51B5"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" ta"
                android:textSize="@dimen/_20ssp"
                android:textColor="#3F51B5"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vaqti:"
                android:textSize="@dimen/_20ssp"
                android:textColor="#3F51B5"/>
            <TextView
                android:id="@+id/vaqti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16:00 dan 18:00 gacha"
                android:textSize="@dimen/_16ssp"
                android:textColor="#3F51B5"/>

        </LinearLayout>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_boshlash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cornerRadius="@dimen/_5sdp"
            android:elevation="@dimen/_3sdp"
            android:backgroundTint="#FFB800"
            android:text="Darslarni boshlash"
            android:textColor="#3F51B5"
            android:textSize="@dimen/_15ssp"
            android:layout_marginVertical="@dimen/_10sdp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Barcha o'quvchilar ro'yxati"
            android:textSize="@dimen/_18ssp"
            android:textColor="#3F51B5"
            android:gravity="center"/>

    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>